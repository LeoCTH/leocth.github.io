---
export interface Props {
  link?: string;
  type?: string | string[];
  icon?: string;

  id?: string;
  title?: string;
  disabled?: boolean;
}

const {
  link,
  type = "github",
  icon,
  id,
  title,
  disabled,
} = Astro.props as Props;
---

{
  (() => {
    let button = (
      <div
        tabindex="-1"
        disabled={disabled}
        id={id}
        title={title}
        class={`button is-${type}`}
      >
        {icon && (
          <span class="icon">
            <i class={icon} />
          </span>
        )}
        <span>
          <slot />
        </span>
      </div>
    );

    if (link) {
      const [href, target] = link.split("|", 2);
      button = (
        <a class="nohl" href={href} target={target}>
          {button}
        </a>
      );
    }
    return button;
  })()
}
