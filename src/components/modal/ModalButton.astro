---
export interface Props {
  modal?: string;
  type?: string | string[];
  icon?: string;

  id?: string;
  title?: string;
  disabled?: boolean;
}

const {
  modal,
  type = "github",
  icon,
  id,
  title,
  disabled,
} = Astro.props as Props;
---

<label tabindex="0" role="button" for={modal}>
  {/*@ts-ignore*/}
  <span disabled={disabled} id={id} title={title} class={`button is-${type}`}>
    {
      icon && (
        <span class="icon">
          <i class={icon} />
        </span>
      )
    }
    <span>
      <slot />
    </span>
  </span>
</label>
