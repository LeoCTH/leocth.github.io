include ../comps/icon
include ../comps/modal

mixin navbar-link(link, icon, color)
	a.navbar-item.is-flex(href=link target="_blank")
		+icon(icon, color)(aria-hidden=true).mr-1
		block

nav.navbar.is-fixed-top.is-primary(role="navigation" aria-label="navigation")
	input#navbar-toggle.is-hidden(type="checkbox")
	
	.navbar-brand
		a.navbar-item.py-0(href="/")
			img(src="/icons/wordmark.svg" alt="pluie.me" width="100" height="28")
		
		label.navbar-burger(for="navbar-toggle" role="button" aria-label="menu")
			//- Three empty spans here for rendering the burger icon
			span(aria-hidden="true")
			span(aria-hidden="true") 
			span(aria-hidden="true")
		
	.navbar-menu
		.navbar-start
			each category in categories
				a.navbar-item(href=category.url)= category.title

			label(for=switches.contacts).navbar-item.has-dropdown.has-dropdown-toggle
				input(id=switches.contacts type="checkbox").navbar-dropdown-toggle

				span.navbar-link Contact / Links
				
				.navbar-dropdown
					for link in links
						a.navbar-item.is-flex(href=link.link target="_blank")
							+icon(link.icon, link.color)(aria-hidden=true).mr-1
							span= link.text

					label(tabindex="0" role="button" for=switches.email)
						a.navbar-item.is-flex(href="")
							+icon("fas fa-envelope")(aria-hidden=true).mr-1
							span Email
						
				 
		
